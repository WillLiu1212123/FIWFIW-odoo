<odoo>
    <record id="kw_product_search_panel_product_template_search" model="ir.ui.view">
        <field name="name">product.template.search (kw_product_search_panel)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <searchpanel>
                    <field name="categ_id" enable_counters="1"/>
                    <field name="type" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>
