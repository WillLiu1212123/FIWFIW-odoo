                                        <strong><span>客戶：<field name="order_partner_id"/></span></strong>
                                    </div>
<!--                                    <div class="col-7">    -->
<!--                                        <strong><span>訂單支數：<field name="al_count"/></span></strong>-->
<!--                                    </div>-->
                                </div>
                            <hr class="mt4 mb4"/>
